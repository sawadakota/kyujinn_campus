<div class="row-fluid">
  <div class="span4 well">
    <%= form_for (@company) do |f| %>
        <fieldset>

          <%= f.label :"店名"  %>
          <%= f.text_field :name %>

          <%= f.label :"写真" %>
          <%= f.file_field :avatar %>

          <%= f.label :"時給" %>
          <%= f.text_field :jikyu %>

          <%= f.label :"場所" %>
          <%= f.text_field :location %>

          <%= f.label :"詳細" %>
          <%= f.text_field :detail %>

          <%= f.submit "送信", :class => 'btn btn-primary withripple' %>
    <% end %>
   </div>
</div>